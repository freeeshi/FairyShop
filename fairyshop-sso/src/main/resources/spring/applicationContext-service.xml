	<!-- 包扫描器，扫描带@Service注解的类 -->
	<context:component-scan base-package="cn.fairyshop.sso.service"></context:component-scan>
	
	<!-- redis配置，单机版和集群版不能共存，需要注释掉其一 -->
	<!-- 配置jedisPool，以及redis客户端单机版实现类 -->
	<bean id="jedisPool" class="redis.clients.jedis.JedisPool">
		<constructor-arg name="host" value="192.168.0.151" />
		<constructor-arg name="port" value="6379" />
	</bean>
	
	<bean id="jedisClientSingle" class="cn.fairyshop.sso.component.impl.JedisClientSingle" />
	
